<Page x:Class="BKDelivery.CallCenter.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BKDelivery.CallCenter"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddClientPage"
      DataContext="{Binding AddClientVm, Source={StaticResource Locator}}">

    <StackPanel Orientation="Vertical">
        <TextBlock>Name</TextBlock>
        <TextBox Name="NameTextBox" Text="{Binding Name, Mode=TwoWay}" />
        <TextBlock>Surname</TextBlock>
        <TextBox Name="SurnameTextBox" Text="{Binding Surname, Mode=TwoWay}"/>
        <TextBlock>Phone number</TextBlock>
        <TextBox Name="PhoneNumberTextBox" Text="{Binding PhoneNumber, Mode=TwoWay}"/>
        <TextBlock>Email address</TextBlock>
        <TextBox Name="EmailTextBox" Text="{Binding EmailAddress, Mode=TwoWay}"/>

        
        <Button Name="SaveButton" Content="Save" Command="{Binding SaveCommand}"/>

    </StackPanel>
</Page>
