<Page x:Class="BKDelivery.CallCenter.AddPackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BKDelivery.CallCenter"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddPackPage"
      DataContext="{Binding AddPackVm, Source={StaticResource Locator}}">

    <StackPanel Orientation="Vertical">
        <TextBlock>Weight</TextBlock>
        <TextBox Name="WeightTextBox" Text="{Binding Weight, Mode=TwoWay}" />
        <TextBlock>Cost</TextBlock>
        <TextBox Name="CostTextBox" Text="{Binding Cost, Mode=TwoWay}"/>
        <TextBlock Text="Category"/>
        <ComboBox ItemsSource="{Binding CategoriesCollection}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <Button Name="AddButton" Content="Add" Command="{Binding AddCommand}"/>

    </StackPanel>
</Page>
